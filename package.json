{
  "name": "blikvm-server",
  "version": "1.0.0",
  "description": "This is the server-side implementation of blikvm",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "node src/index.js",
    "clean": "rm -r temp && rm -r release && rm -r doc/func",
    "build-1": "babel src --out-dir temp/src",
    "build-2": "pkg -c .pkg.json temp/src/index.js -o temp/bin/server_app",
    "build-3": "mkdir release && cp -r config lib temp/bin/server_app release/",
    "build": "npm run build-1 && npm run build-2 && npm run build-3",
    "lint": "eslint . --ext .js,.cjs, --fix --ignore-path .gitignore",
    "format": "prettier --write src",
    "check": "eslint . --ext .js,.cjs, --fix --ignore-path .gitignore && prettier --write src",
    "docs": "jsdoc -c .jsdoc.json -R README.md",
    "test": "jest test/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "log4js": "^6.9.1",
    "multer": "^1.4.5-lts.1",
    "progress-stream": "^2.0.0",
    "serialport": "^12.0.0",
    "systeminformation": "^5.22.9",
    "unix-dgram": "^2.0.6",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/preset-env": "^7.24.0",
    "docdash": "^2.0.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5"
  }
}
